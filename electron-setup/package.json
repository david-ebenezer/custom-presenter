{
  "name": "Presenter3beta",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron main.js",
    "build": "electron-builder",
    "dev": "cross-env NODE_ENV=development electron .",
    "dist": "electron-builder --win --mac --linux"
  },
  "build": {
    "appId": "com.example.myapp",
    "files": [
      "main.js",
      "public/**/*",
      "preload.js"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },

    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "maintainer": "David Ebenezer <davidebenezerp@gmail.com>"
    }
  },
  "homepage": "https://github.com/david-ebenezer/lyricspresenter2withbg",
  "author": {
    "name": "David Ebenezer",
    "email": "davidebenezerp@gmail.com"
  },
  "devDependencies": {
    "electron": "^24.1.0",
    "electron-builder": "^24.13.3",
    "electron-reloader": "^1.2.3",
    "cross-env": "^7.0.3"
  }
}
