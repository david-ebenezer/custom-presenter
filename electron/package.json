{
  "name": "lyricspresenter2",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
      "start": "electron main.js",
      "build": "electron-builder",
      "dev": "cross-env NODE_ENV=development electron .",
      "dist": "electron-builder --mac --win"
    },
    "build": {
      "appId": "com.example.myapp",
      "files": [
        "main.js",
        "public/**/*",
        "preload.js"
      ],
      "directories": {
        "output": "dist"
      },
      "mac": {
        "target": [
          {
            "target": "dmg",
            "arch": [
              "x64",
              "arm64"
            ]
          },
          {
            "target": "zip",
            "arch": [
              "x64",
              "arm64"
            ]
          }
        ]
      },
      "win": {
        "target": [
          {
            "target": "nsis",
            "arch": [
              "x64",
              "arm64"
            ]
          },
          {
            "target": "zip",
            "arch": [
              "x64",
              "arm64"
            ]
          }
        ]
      }
    },
    "devDependencies": {
      "electron": "^24.1.0",
      "electron-builder": "^24.13.3",
      "electron-reloader": "^1.2.3",
      "cross-env": "^7.0.3"
    }
  }
  